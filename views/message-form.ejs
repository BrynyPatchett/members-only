<%-include('header',{title:title}) %>
  <body>
    <div class="content-container">
        <div class="sign-in">
        <h1><%= title %></h1>
        <form method="POST">
            <div class="sign-in-form">
                <div class="form-input">
                    <label for="message">Message</label>
                    <textarea  name="message" required id="message" placeholder="message" rows="8" cols="50" style="resize: none"></textarea>
                </div>
                <div class="form-input">
                    <input type="submit" value="Submit">
                </div>
            </div>
        </form>
        <%if(typeof errors != "undefined"){ %>
            <p>errors go here</p>
          <% } %>
        </div>
    </div>
  </body>
</html>
