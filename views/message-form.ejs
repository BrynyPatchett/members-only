<%-include('header',{title:title}) %>
  <body>
    <%-include('accountBar',{title:title,user:typeof user === "undefined" ? undefined : user}) %>
    <div class="content-container">
        <div class="sign-in">
        <h1><%= title %></h1>
        <%if (typeof user != "undefined"){ %>  
        <form method="POST">
            <div class="sign-in-form">
                <div class="form-input">
                    <label for="message">Message</label>
                    <textarea  name="message" required id="message" placeholder="message" rows="8" cols="50" style="resize: none"><%= typeof message === "undefined" ? '' : message %></textarea>
                </div>
                <div class="form-input">
                    <input type="submit" value="Submit">
                </div>
            </div>
        </form>
        <% }else{ %>
          <p><a href="/messageboard/sign-in">Sign in</a> or <a href="/messageboard/sign-up">Create an account</a> to post a message</p>
        <% } %>
        <%if(typeof errors != "undefined"){ %>
          <ul>
          <% errors.forEach((error) => { %>
              <li><%= error.msg%></li>
          <% })%>
          </ul>
        <% } %>
        </div>
    </div>
  </body>
</html>
