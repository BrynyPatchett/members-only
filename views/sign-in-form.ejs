<%-include('header',{title:title}) %>
  <body>
    <%-include('accountBar',{title:title,user:typeof user === "undefined" ? undefined : user}) %>
    <div class="content-container">
        <div class="sign-in">
        <h1><%= title %></h1>
        <form method="POST">
            <div class="sign-in-form">
                <div class="form-input">
                    <label for="username">Username</label>
                    <input type="text" name="username" required id="username" placeholder="username"
                    value='<%=  typeof user === "undefined" ? `` : user.username %>'>
                </div>
                <div class="form-input">
                    <label for="password">Password</label>
                    <input type="password" name="password" required id="password" placeholder="password">
                </div>
                <div class="form-input">
                    <input type="submit" value="Submit">
                </div>
            </div>
        </form>
        <p>Need to create an account? <a href="/messageboard/sign-up">Sign Up</a></p>
        <%if(typeof errors != "undefined"){ %>
            <% errors.forEach((error) => { %>
                <p><%= error.msg%></p>
            <% })%>
          <% } %>
        </div>
    </div>
  </body>
</html>
